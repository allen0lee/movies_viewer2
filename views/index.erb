<link rel="stylesheet" href="/stylesheets/owl.carousel.min.css">
<link rel="stylesheet" href="/stylesheets/index_carousel.css">

<div class="search-box">
    <h1>Search Movie</h1>
    <form class="form-inline" action="/movie" method="get">
        <input class="form-control mr-sm-3 search-input" type="text" name="title" value="" placeholder="Movie Name">
        <button class="btn btn-outline-success my-2 my-sm-0 hidden" type="submit">Search</button>
    </form>
</div>

<div class="carousel-wrap">
    <div class="owl-carousel">
        <% @popular_movies.each do |movie| %>
        <div class="item">
            <img src="<%= movie.poster_url %>" class="carousel-img">
            <a href="/movie_infor/<%= movie.title %>"></a>
            <div class="movie-name">
                <marquee behavior="scroll" direction="left"><%= movie.title %></marquee>
            </div>
        </div>
        <% end %>
    </div>
</div>

